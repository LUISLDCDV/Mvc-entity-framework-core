@model IEnumerable<FinalBanco.Models.CajaDeAhorro>

    @{
        ViewData["Title"] = "CREAR PLZ FIJO ";
    }

    <h1>SELECCIONE LA CAJA</h1>

    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model._cbu)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model._saldo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item._cbu)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item._saldo)
                    </td>
                    <td>
                    <a asp-controller="PlazoFijoes" asp-action="AltaPlazoFijo" asp-route-id="@item._id_caja" class="acontainer" data-nombre="Realizar operacion">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-check2-square" viewBox="0 0 16 16">
                            <path d="M3 14.5A1.5 1.5 0 0 1 1.5 13V3A1.5 1.5 0 0 1 3 1.5h8a.5.5 0 0 1 0 1H3a.5.5 0 0 0-.5.5v10a.5.5 0 0 0 .5.5h10a.5.5 0 0 0 .5-.5V8a.5.5 0 0 1 1 0v5a1.5 1.5 0 0 1-1.5 1.5H3z" />
                            <path d="m8.354 10.354 7-7a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0z" />
                        </svg>
                    </a>
                    </td>                  
                </tr>
            }
        </tbody>
    </table>
