@model IEnumerable<FinalBanco.Models.PlazoFijo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="acontainer" data-nombre="Create New">        
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
        </svg>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model._titular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._monto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._fechaIni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._fechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._tasa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._pagado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._cbu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._titular._id_usuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._fechaIni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._fechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._tasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._pagado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._cbu)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item._id_plazoFijo" class="acontainer" data-nombre="Details">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-info-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                    </svg>                    
                </a>
            </td>
            <td>
                 <a asp-action="Delete" asp-route-id="@item._id_plazoFijo" class="acontainer" data-nombre="Delete">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                    </svg>                    
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class=" alert-danger">
    @ViewBag.PF
</div>
<div class=" alert-success">
    @ViewBag.PF_OK
</div>