@model IEnumerable<FinalBanco.Models.Pago>


@{
    ViewData["Title"] = "PAGOS";
}

<h1>Detalle de pagos realizados o a confirmar</h1>
<p>
    <a asp-controller="Pagoes" asp-action="crearPAGO" class="acontainer" data-nombre="Crear nueva factura de pago">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
        </svg>
    </a>
</p>

<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model._id_pago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._metodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._id_metodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._pagado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item._id_pago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item._metodo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item._id_metodo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item._detalle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item._pagado)
                </td>
                <td>
                    <a asp-controller="Pagoes" asp-action="pagoFinalizar" asp-route-id="@item._id_pago" class="acontainer" data-nombre="Confirmar">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-file-check" viewBox="0 0 16 16">
                            <path d="M10.854 6.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 8.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                            <path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" />
                        </svg>
                    </a>
                </td>
                <td>
                    <a asp-controller="Pagoes" asp-action="eliminarPago" asp-route-id="@item._id_pago" class="acontainer" data-nombre="Dar baja">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-file-arrow-down" viewBox="0 0 16 16">
                            <path d="M8 5a.5.5 0 0 1 .5.5v3.793l1.146-1.147a.5.5 0 0 1 .708.708l-2 2a.5.5 0 0 1-.708 0l-2-2a.5.5 0 1 1 .708-.708L7.5 9.293V5.5A.5.5 0 0 1 8 5z" />
                            <path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class=" alert-danger">
    @ViewBag.EP
</div>
<div class=" alert-success">
    @ViewBag.EP_OK
</div>