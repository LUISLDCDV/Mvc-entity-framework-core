@model IEnumerable<FinalBanco.Models.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<h1>Listado de Usuarios</h1>

<p>
    <a asp-action="Create" class="acontainer" data-nombre="Crear nuevo usuario">
    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-add" viewBox="0 0 16 16">
        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0Zm-2-6a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" />
        <path d="M8.256 14a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1h5.256Z" />
    </svg>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Dni
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Email
            </th>
            <th>
               Intentos Fallidos
            </th>
            <th>
                Es Usuario Admin
            </th>
            <th>
                Bloqueado
            </th>
            <th>
                Operaciones                  
            </th>

            <th>                
            </th>

            <th>
            </th>

            <th>                
            </th>

            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._intentosFallidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._esUsuarioAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._bloqueado)
            </td>
            <td>
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item._id_usuario" class="acontainer" data-nombre="Editar usuario">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-fill-gear" viewBox="0 0 16 16">
                        <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm-9 8c0 1 1 1 1 1h5.256A4.493 4.493 0 0 1 8 12.5a4.49 4.49 0 0 1 1.544-3.393C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4Zm9.886-3.54c.18-.613 1.048-.613 1.229 0l.043.148a.64.64 0 0 0 .921.382l.136-.074c.561-.306 1.175.308.87.869l-.075.136a.64.64 0 0 0 .382.92l.149.045c.612.18.612 1.048 0 1.229l-.15.043a.64.64 0 0 0-.38.921l.074.136c.305.561-.309 1.175-.87.87l-.136-.075a.64.64 0 0 0-.92.382l-.045.149c-.18.612-1.048.612-1.229 0l-.043-.15a.64.64 0 0 0-.921-.38l-.136.074c-.561.305-1.175-.309-.87-.87l.075-.136a.64.64 0 0 0-.382-.92l-.148-.045c-.613-.18-.613-1.048 0-1.229l.148-.043a.64.64 0 0 0 .382-.921l-.074-.136c-.306-.561.308-1.175.869-.87l.136.075a.64.64 0 0 0 .92-.382l.045-.148ZM14 12.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0Z" />
                    </svg>
                </a>
            </td>
            <td>
                    <a asp-action="DetalleUsuarioCliente" asp-route-id="@item._id_usuario" class="acontainer" data-nombre="Detalle usuario">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#BEBFBF" class="bi bi-person-lines-fill" viewBox="0 0 16 16">
                        <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5 6s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zM11 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5zm.5 2.5a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4zm2 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2zm0 3a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1h-2z" />
                    </svg>
                </a>
            </td>
            <td>
                    <a asp-action="Delete" asp-route-id="@item._id_usuario" class="acontainer" data-nombre="Eliminar usuario">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#AC0000" class="bi bi-person-dash" viewBox="0 0 16 16">
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7ZM11 12h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1 0-1Zm0-7a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" />
                        <path d="M8.256 14a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1h5.256Z" />
                    </svg>
                </a>
            </td>
            <td>
                    <a asp-action="limpiarIntentosFallidos" asp-route-id="@item._id_usuario" class="acontainer" data-nombre="Limpiar intentos">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#3A9A5D" class="bi bi-person-check-fill" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                        <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    </svg>
                </a>

            </td>
        </tr>
}
    </tbody>
</table>
<div class=" alert-danger">
    @ViewBag.ErrorU
</div>
<div class=" alert-success">
    @ViewBag.Info
</div>